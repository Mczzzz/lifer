{% extends 'base.html.twig' %}

{% block body %}
    <h1>Object</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ object.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ object.name }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ object.owner }}</td>
            </tr>
            <tr>
                <th>Usufruct</th>
                <td>{{ object.usufruct }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ object.localisation }}</td>
            </tr>
            <tr>
                <th>Containerstore</th>
                <td>{{ object.containerStore }}</td>
            </tr>
            <tr>
                <th>Containerin</th>
                <td>{{ object.containerIn }}</td>
            </tr>
            <tr>
                <th>Creator</th>
                <td>{{ object.creator }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('objects_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('objects_edit', { 'id': object.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
